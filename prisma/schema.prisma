generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Media {
  id        String   @id @default(uuid())
  title     String
  type      String   // "Movie" or "TV Show"
  director  String
  budget    String
  location  String
  duration  String
  year      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}